<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <listener>
        <description>ServletContextListener</description>
        <listener-class>connect.create_db</listener-class>
    </listener>
    <servlet>
        <servlet-name>AnswerToQuestion</servlet-name>
        <servlet-class>servlets.AnswerToQuestion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>create</servlet-name>
        <servlet-class>servlets.create</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>friendList</servlet-name>
        <servlet-class>servlets.friendList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>servlets.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>search_friend_json</servlet-name>
        <servlet-class>servlets.search_friend_json</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sendQuestion</servlet-name>
        <servlet-class>servlets.sendQuestion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>test_user_follow</servlet-name>
        <servlet-class>servlets.test_user_follow</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>makeFollow</servlet-name>
        <servlet-class>servlets.makeFollow</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>makeUnFollow</servlet-name>
        <servlet-class>servlets.makeUnFollow</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AnswerToQuestion</servlet-name>
        <url-pattern>/AnswerToQuestion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>create</servlet-name>
        <url-pattern>/create</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>friendList</servlet-name>
        <url-pattern>/friendList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>search_friend_json</servlet-name>
        <url-pattern>/search_friend_json</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sendQuestion</servlet-name>
        <url-pattern>/sendQuestion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>test_user_follow</servlet-name>
        <url-pattern>/test_user_follow</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>makeFollow</servlet-name>
        <url-pattern>/makeFollow</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>makeUnFollow</servlet-name>
        <url-pattern>/makeUnFollow</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
